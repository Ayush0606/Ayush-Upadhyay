{%- liquid
  assign logo_text = section.settings.logo_text
  assign navbar_text = section.settings.navbar_text
  assign headline = section.settings.headline
  assign description = section.settings.description
  assign cta_text = section.settings.cta_text
  assign cta_link = section.settings.cta_link
  assign badge_text = section.settings.badge_text
  assign footer_text = section.settings.footer_text
-%}

{{ 'gift-guide.css' | asset_url | stylesheet_tag }}
{{ 'gift-guide.js' | asset_url | script_tag }}

<div class="gift-guide-banner-wrapper">
  <!-- Top Navigation Bar -->
  <nav class="gift-guide-banner__navbar">
    <div class="gift-guide-banner__navbar-logo">{{ logo_text }}</div>
    <div class="gift-guide-banner__navbar-text">{{ navbar_text }}</div>
    <a href="{{ cta_link }}" class="gift-guide-banner__navbar-badge">{{ badge_text }} â†’</a>
  </nav>

  <!-- Main Banner Grid -->
  <div class="gift-guide-banner">
    <!-- Left Content Section -->
    <div class="gift-guide-banner__left">
      <div class="gift-guide-banner__brand">{{ logo_text }}</div>
      
      <h1 class="gift-guide-banner__headline">{{ headline }}</h1>
      
      <p class="gift-guide-banner__description">{{ description }}</p>
      
      <button class="gift-guide-banner__cta" onclick="window.location.href='{{ cta_link }}'">
        {{ cta_text }}
      </button>

      <!-- Footer Tagline -->
      <div class="gift-guide-banner__footer">{{ footer_text }}</div>
    </div>

    <!-- Right Decoration Section -->
    <div class="gift-guide-banner__right">
      <div class="gift-guide-banner__decoration-container">
        <img 
          src="{{ 'Frame.png' | asset_url }}" 
          alt="Gift Decoration" 
          class="gift-guide-banner__decoration-frame"
          loading="lazy"
        >
        <img 
          src="{{ 'frame1.png' | asset_url }}" 
          alt="Gift Items" 
          class="gift-guide-banner__decoration-accent"
          loading="lazy"
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo/Brand Text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "navbar_text",
      "label": "Navbar Center Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Main Headline",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover joy: Your Ultimate Holiday Gift Destination.\nExplore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Top Right Badge Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Bottom Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %}
